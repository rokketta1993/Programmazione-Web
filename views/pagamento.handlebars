<h2 class="page-header">Pagamento</h2>
<div align="center">
{{#if errors}}
    {{#each errors}}
        <div class="alert alert-danger">{{msg}}</div>
    {{/each}}
{{/if}}
<form method="post" action="/users/pay">
    <div class="form-group">
        <label>ID movimento</label>
        <input type="number" class="form-control" placeholder="ID movimento" name="ID">
    </div>
    <div class="form-group">
        <label>Nome mittente</label>
        <input type="text" class="form-control" placeholder="Nome Mittente" name="nomemit">
    </div>
    <div class="form-group">
        <label>Nome destinatario</label>
        <input type="text" class="form-control" placeholder="Nome Destinatario" name="nomedes">
    </div>

    <div class="form-group">
        <label>Importo</label>
        <input type="number" class="form-control" placeholder="Importo" name="importo">
    </div>
    <div class="form-group">
        <label>Valuta</label>
        <input type="text" class="form-control" placeholder="Euro o dollaro" name="valuta">
    </div>
    
    <button type="submit" class="btn btn-default">Submit</button>
</form>
</div>