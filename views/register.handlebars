<h2 class="page-header">Register</h2>
{{#if errors}}
      {{#each errors}}
        <div class="alert alert-danger">{{msg}}</div>
      {{/each}}
{{/if}}
<div align="center">
<form method="post" action="/users/register">
   <div class="form-group">
    <label>Name</label>
    <input type="text" class="form-control" style="width: 300px;" placeholder="Name" name="name">
  </div>

  <div class="form-group">
    <label>Username</label>
    <input type="text" class="form-control" style="width: 300px;" placeholder="Username" name="username">
  </div>
   <div class="form-group">
    <label>Email</label>
    <input type="email" class="form-control" style="width: 300px;" placeholder="Email" name="email">
  </div>
  <div class="form-group">
    <label>Password</label>
    <input type="password" class="form-control" style="width: 300px;" placeholder="Password" name="password">
  </div>
  <div class="form-group">
    <label>Confirm Password</label>
    <input type="password" class="form-control" style="width: 300px;" placeholder="Password" name="password2">
  </div>

  <button type="submit" class="btn btn-default">Submit</button>
</form>
</div>